generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id
  name        String?
  balance     Int     @default(0)
  centerPoint Float[]
  coins       Coin[]
}

enum CoinType {
  place
  random
}

model Coin {
  id       String   @id @default(cuid())
  type     CoinType
  location Float[]
  value    Int

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
